{# Pagina pai #}
{% extends "layout.twig" %}

{# Titulo da pagina #}
{% block title %}Editar Post{% endblock %}

{# Conteudo #}
{% block lista_de_posts %}
    <div class="container">
        <h1 class="text-center">Editar Post</h1>
        <p class="text-center">
            <a href="{{path('lista-posts')}}" class="label label-danger"><span class="glyphicon glyphicon-home"></span> Página principal</a> 
        </p>
        <hr>
        <div class="row">
            <form id="edita-post" action="{{path('edita-post', {id: post_edit.id})}}" method="post" class="form-group col-sm-8 col-sm-offset-2">
                <input type="text" name="titulo" id="titulo" class="form-control" style="margin-bottom: 30px;" placeholder="Título" value="{{post_edit.titulo}}">
                
                <div style="margin-bottom: 30px;">
                    <textarea name="editorHTML" rows="20" cols="100" class="editorHTML">{{post_edit.conteudo|raw}}</textarea>
                </div>
                
                <div id="status"></div>
                
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Salvar</button>
                <a href="{{path('lista-posts')}}" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Cancelar</a>
                
                <input type="hidden" name="postID" id="postID" value="{{post_edit.id}}">
            </form>
        </div>
        
    </div>
{% endblock %}
